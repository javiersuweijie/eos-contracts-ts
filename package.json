{
  "name": "eosts-contracts",
  "version": "1.0.0",
  "description": "EOS contracts written in typescript",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",

    "debug:helloworld": "asc contracts/helloworld/*.ts -t build/helloworld/untouched.wast --sourceMap --measure --noAssert --use abort=",
    "debug:todolist": "asc contracts/todolist/*.ts -t build/todolist/untouched.wast --sourceMap --measure --noAssert --use abort=",
    "debug": "npm run debug:helloworld && npm run debug:todolist",

    "release:helloworld": "asc contracts/helloworld/*.ts -t build/helloworld/optimized.wast -b build/helloworld/optimized.wasm -O3 --noDebug --sourceMap --measure --noAssert --use abort=",
    "release:todolist": "asc contracts/todolist/*.ts -t build/todolist/optimized.wast -b build/todolist/optimized.wasm -O3 --noDebug --sourceMap --measure --noAssert --use abort=",
    "release:bank": "asc contracts/bank/*.ts -t build/bank/optimized.wast -b build/bank/optimized.wasm -O3 --noDebug --sourceMap --measure --noAssert --use abort=",
    "release": "npm run release:helloworld && npm run release:todolist",

    "build": "npm run debug && npm run release"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "assemblyscript": "github:AssemblyScript/assemblyscript",
    "typescript": "^2.9.2"
  }
}
